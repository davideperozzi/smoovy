#!/usr/bin/env sh
PKG=$(pwd)/packages/$1

echo "ðŸ“¦ Building bundle for \"$1\""
rm -rf $PKG/dist && \
rollup \
  -c $(pwd)/build/rollup.config.js \
  --environment PACKAGE:$PKG \
  --silent


if [ -f "$PKG/.modular" ]; then
  echo "ðŸ”” Found .modular file"
  echo "ðŸ“¦ Building modules for \"$1\""
  rm -rf $PKG/m && \
  tsc \
    --project $PKG \
    --outDir $PKG/m
fi
