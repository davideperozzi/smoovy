{
  "name": "smoovy-v2",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "volta": {
    "node": "18.12.1",
    "npm": "9.1.3",
    "yarn": "3.3.0"
  },
  "scripts": {
    "build": "turbo run --no-daemon --concurrency=4 build",
    "dev": "turbo run --no-daemon dev",
    "clean": "turbo run --no-daemon clean",
    "coverage": "turbo run --no-daemon --concurrency=2 coverage",
    "lint": "turbo run --no-daemon --concurrency=4 lint",
    "postinstall": "husky install",
    "precommit": "turbo run --no-daemon --concurrency=4 precommit",
    "release": "yarn build && changeset publish",
    "test": "turbo run --no-daemon --concurrency=2 test",
    "version": "changeset version && yarn install"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/config-lerna-scopes": "^17.2.1",
    "@manypkg/cli": "^0.19.2",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "esbuild": "^0.15.16",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jsdom": "^20.0.3",
    "prettier": "^2.8.0",
    "sass": "^1.56.2",
    "tsconfig-paths": "^4.1.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.3"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/jsdom": "^20",
    "@types/prettier": "^2"
  }
}
