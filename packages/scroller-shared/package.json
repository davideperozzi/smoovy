{
  "name": "@smoovy/scroller-shared",
  "version": "0.0.11",
  "description": "Scroller shared components",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/types/index.d.ts",
  "homepage": "https://github.com/davideperozzi/smoovy",
  "repository": "https://github.com/davideperozzi/smoovy",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**",
    "m/**"
  ],
  "scripts": {
    "lint": "NAME=$(basename \"$PWD\") && cd ../../ && npm run lint:package $NAME",
    "test": "NAME=$(basename \"$PWD\") && cd ../../ && npm run test:package $NAME",
    "build": "NAME=$(basename \"$PWD\") && cd ../../ && npm run build:package $NAME",
    "serve": "NAME=$(basename \"$PWD\") && cd ../../ && npm run serve:package $NAME $1"
  },
  "keywords": [
    "smoovy",
    "scroller",
    "shared",
    "scrolling",
    "transformers",
    "outputs",
    "inputs"
  ],
  "author": "Davide Perozzi",
  "license": "MIT",
  "dependencies": {
    "@smoovy/scroller-core": "^0.0.10",
    "@smoovy/utils": "^0.1.5",
    "tslib": "^1.9.3"
  }
}
